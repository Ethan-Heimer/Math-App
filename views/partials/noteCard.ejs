<div class="card">
    <h1 class="header c<%=note.note_color%>"><%=note.note_title%></h1>    

    <div class="content center pad-1">
        <p><%=note.note_content%></p>
    </div>
    
    <div class="footer">
        <%=note.note_tags%>#<%=note.id%>c:<%=note.note_color%>

        <%if(editable) {%>
            <div>
            <button id="edit">
                    <a href="/editor/<%=note.id%>"><i class="fa-solid fa-pencil"></i></a>
            </button>

            <button id="delete">
                    <a href="/editor/delete/<%=note.id%>"><i class="fa-solid fa-trash"></i></a>
            </button>
            </div>
        <%}%>
    </div>
</div>